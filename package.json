{
  "name": "rackoon-streaming",
  "version": "1.0.0",
  "description": "ðŸŽ¬ Application de streaming vidÃ©o moderne avec lecteur intÃ©grÃ©, support MKV, pistes audio multiples et sous-titres",
  "main": "main.js",
  "keywords": [
    "electron",
    "video",
    "streaming",
    "player",
    "mkv",
    "subtitles",
    "media"
  ],
  "homepage": "https://github.com/Samuelalhadef/Rackoon-Streaming-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Samuelalhadef/Rackoon-Streaming-1.0.git"
  },
  "bugs": {
    "url": "https://github.com/Samuelalhadef/Rackoon-Streaming-1.0/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64 --publish=never",
    "install:clean": "npm run clean:lock && npm install --no-optional",
    "install:safe": "npm install --no-optional --no-fund --loglevel=warn",
    "clean": "npm run clean:deps && npm run clean:lock",
    "clean:deps": "rimraf node_modules",
    "clean:lock": "rimraf package-lock.json",
    "clean:force": "npm cache clean --force && rimraf node_modules package-lock.json",
    "setup": "npm install && npm run postinstall",
    "postinstall": "npm run check-deps",
    "check-deps": "node -e \"console.log('âœ… Dependencies check passed')\"",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0"
  },
  "author": {
    "name": "Production Directive",
    "email": "contact@production-directive.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.production-directive.rackoon-streaming",
    "productName": "Rackoon Streaming",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/img/icon.ico",
      "signingHashAlgorithms": null,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Rackoon Streaming"
    },
    "portable": {
      "artifactName": "Rackoon-Streaming-${version}-Portable.exe"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**/*",
      "**/node_modules/ffprobe-static/**/*"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^10.3.10",
    "gsap": "^3.14.2",
    "nanoid": "^5.1.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ]
}
